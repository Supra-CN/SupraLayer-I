<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.supra.supralayer_i"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <permission
        android:name="cn.supra.supralayer_i.providers.bookmarksprovider.READ"
        android:description="@string/PermissionReadBookmarksDescription"
        android:label="@string/PermissionReadBookmarksLabel"
        android:permissionGroup="android.permission-group.PERSONAL_INFO"
        android:protectionLevel="dangerous" />
    <permission
        android:name="cn.supra.supralayer_i.providers.bookmarksprovider.WRITE"
        android:description="@string/PermissionWriteBookmarksDescription"
        android:label="@string/PermissionWriteBookmarksLabel"
        android:permissionGroup="android.permission-group.PERSONAL_INFO"
        android:protectionLevel="dangerous" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cn.supra.supralayer_i.SpaceActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/SpaceTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".providers.BookmarksProvider"
            android:authorities="cn.supra.supralayer_i.providers.bookmarksprovider"
            android:readPermission="cn.supra.supralayer_i.providers.bookmarksprovider.READ"
            android:writePermission="cn.supra.supralayer_i.providers.bookmarksprovider.WRITE" />
        <provider
            android:name=".providers.SslExceptionsProvider"
            android:authorities="cn.supra.supralayer_i.providers.sslexceptionsprovider"
            android:exported="false" />
    </application>

</manifest>